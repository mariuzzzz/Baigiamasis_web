@model MVC_Ataskaitos.Models.userModel

@{
    Layout = null;

}

<!DOCTYPE html>
<style>
    .field-validation-error {
        color: red;
    }
</style>
<html>
<body background ="~Desktop/downloads/media.png">

    <div id="login-div">
        @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
        {
            <table style="margin:0 auto">
                <tr>
                    <td style="text-decoration:underline; margin-left:auto; margin-right:auto; text-align:center">Media-press.tv Baltic</td>
                </tr>
                <tr>
                    <td style="margin-left:auto; margin-right:auto; text-align:center">
                        <label style="">User Name:</label>
                        @Html.TextBox("login", null, new { @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td style="margin-left:auto; margin-right:auto; text-align:center">
                        @Html.ValidationMessageFor(model => model.user_name)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        <label>Password:</label>
                        @Html.Password("password")
                    </td>
                </tr>
                <tr>
                    <td style="margin-left:auto; margin-right:auto; text-align:center">
                        @Html.ValidationMessageFor(model => model.password)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label class="field-validation-error">@Html.DisplayFor(model => model.errorMessage)</label>
                    </td>
                </tr>
                <tr>
                    <td style="margin-left:auto; margin-right:auto; text-align:right">
                        <input type="submit" name="name" value="Login" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
