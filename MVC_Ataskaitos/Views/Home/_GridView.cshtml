@model IEnumerable<MVC_Ataskaitos.Models.channelModel>

<div class="col-sm-12">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.channel_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.channel_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.show_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time_start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time_stop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.delta_start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.delta_stop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.moder_status_start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.moder_status_stop)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.channel_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.channel_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.show_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.time_start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.time_stop)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>

                    @if ((Int32.Parse(item.delta_start) < 1800) && (Int32.Parse(item.delta_start) > -1800))
                    {
                        <span style="color:blue;">
                            @item.delta_start
                        </span>
                    }
                    else if (Int32.Parse(item.delta_start) >= 1800 && Int32.Parse(item.delta_start) < 3600 || Int32.Parse(item.delta_start) <= -1800 && Int32.Parse(item.delta_start) > -3600)
                    {
                        <span style="color:orange;">
                            @item.delta_start
                        </span>
                    }
                    else if (Int32.Parse(item.delta_start) >= 3600 || Int32.Parse(item.delta_start) <= -3600)
                    {
                        <span style="color:red;">
                            @item.delta_start
                        </span>
                    }

                </td>
                <td>
                    @if ((Int32.Parse(item.delta_stop) < 1800) && (Int32.Parse(item.delta_stop) > -1800))
                    {
                        <span style="color:blue;">
                            @item.delta_stop
                        </span>
                    }
                    else if (Int32.Parse(item.delta_stop) >= 1800 && Int32.Parse(item.delta_stop) < 3600 || Int32.Parse(item.delta_stop) <= -1800 && Int32.Parse(item.delta_stop) > -3600)
                    {
                        <span style="color:orange;">
                            @item.delta_stop
                        </span>
                    }
                    else if (Int32.Parse(item.delta_stop) >= 3600 || Int32.Parse(item.delta_stop) <= -3600)
                    {
                        <span style="color:red;">
                            @item.delta_stop
                        </span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.moder_status_start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.moder_status_stop)
                </td>
            </tr>
        }

    </table>
</div>
